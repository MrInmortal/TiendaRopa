    };

    private async Task AgregarAlCarrito(Producto producto)
    {
        var carrito = await CarritoService.ObtenerCarritoAsync();
        var item = carrito.FirstOrDefault(c => c.Producto.Id == producto.Id);

        if (item != null)
        {
            item.Cantidad++;
        }
        else
        {
            carrito.Add(new CarritoItem { Producto = producto, Cantidad = 1 });
        }

        await CarritoService.GuardarCarritoAsync(carrito);
    }
}

<style>
    .titulo {
        text-align: center;
        margin-bottom: 20px;
        color: #6a1b9a;
        font-family: 'Segoe UI', sans-serif;
        font-size: 1.8em;
    }

    .grid-productos {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        padding: 10px;
    }

    .carta-producto {
        background: #fff;
        border: 1px solid #e0e0e0;
        border-radius: 10px;
        overflow: hidden;
        text-align: center;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
        transition: transform 0.2s;
    }

        .carta-producto:hover {
            transform: scale(1.03);
        }

    .imagen-producto {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .info-producto {
        padding: 15px;
    }

    .nombre-producto {
        font-size: 1.2em;
        margin: 10px 0;
        color: #333;
    }

    .descripcion-producto {
        font-size: 0.95em;
        color: #666;
        margin-bottom: 10px;
    }

    .precio-producto {
        font-size: 1.1em;
        color: #333;
        margin-bottom: 10px;
        font-family: Arial, sans-serif;
    }

    .btn-agregar {
        padding: 10px 20px;
        background: #0288d1;
        color: #fff;
        border: none;
        border-radius: 5px;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.2s, transform 0.2s;
    }

        .btn-agregar:hover {
            background: #01579b;
            transform: scale(1.05);
        }
</style>
